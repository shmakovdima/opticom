@import 'variables.styl'
@import 'sprite.styl'
@import 'components/fonts.styl'
@import 'components/15colums.styl'
@import 'components/20colums.styl'
@import 'components/text-align-media.styl'

*
  margin 0
  padding 0
  
input
  outline none!important
  border none
  background transparent

body
  padding 0px
  margin 0px
  font-family FuturaPTBook
  min-height 100vh
  background linear-gradient(0deg, #f9f9f9 0%, #ffffff 100%)
  /*background url(../../images/sprites/sdf.png) no-repeat*/

button
  border none
  outline none

a
  color black
  transition 150ms all ease-in
  
  &.green_underline:hover
  &.green_underline:active
    color color_green
  
a:hover
a:active
a:visited
  text-decoration none
  color black
 
ul
  list-style none 
  margin-bottom 0px
  

input[type='checkbox'] 
  display none
  
  &+label
    transition 150ms all ease-in
    opacity 0.3
    position relative
    float left
    cursor pointer
    width 24px
    height 24px
    display block
    background url(../../images/sprites/checkbox.png) center no-repeat
    
    &:hover
      opacity 1
      background url(../../images/sprites/checkbox_hover.png) center no-repeat
      
  &:checked + label
    opacity 1
    background url(../../images/sprites/checkbox_ok.png) center no-repeat!important

.greenlighted_left  
.header_link_active
  z-index 1
  position relative
  display inline
  
  &:before
    opacity 1
    display block
    transition 200ms all ease-in
    z-index -1
    left -7px
    bottom 0px
    background color_green
    content ''
    position absolute
    width 100%
    height 50%
  



.greenlighted_left  
  transition none
  &:before
    transition none
    opacity 0
    
  &:hover:before
  &:active:before
    opacity 1
    
.greenlighted_left.header_link_active
  &:before
    opacity 1
    

.gradient_underlinehover
  position relative
  display inline-block
  z-index 1
  
  &:before
    opacity 0
    display block
    transition 200ms all ease-in
    z-index -1
    right -4px
    bottom 3px
    background: -webkit-linear-gradient(180deg, #4d9bc0 0%, #98c04d 100%)
    background: -moz-linear-gradient(180deg, #4d9bc0 0%, #98c04d 100%)
    background: -o-linear-gradient(180deg, #4d9bc0 0%, #98c04d 100%)
    background: -ms-linear-gradient(180deg, #4d9bc0 0%, #98c04d 100%)
    background: linear-gradient(-90deg, #4d9bc0 0%, #98c04d 100%)
    content ''
    position absolute
    width 100%
    height 50%

  &:hover:before
  &:active:before
    opacity 1

.green_underline
  border-bottom 1px solid #c3e782
  
  &.opacity
    border-bottom 1px solid color_green_opacity
  
section
  margin-top 100px

h1
h2
h3
h4
h5
h6
  margin 0px
  padding 0px
  
h1
  color white
  font-size 72px
  font-family FuturaPTHeavy
  line-height 64px

h2
  font-family FuturaPTHeavy
  color black
  font-size 62px
  line-height 60px
  
h3
  font-family FuturaPTBold
  color black






@media (min-width:  1300px)
  .container
    width 1280px

@media (max-width: 991px)

  h2
    font-size 72px
  h3
    font-size 48px

  .container
    padding-left 45px
    padding-right 45px




.ecocheckbox
  margin-top 30px
  min-width 240px
  
  &:hover
    .ecocheckbox-text
      color color_green
      
      
      
      
    & label
      background url(../../images/sprites/checkbox_hover.png) center no-repeat
      opacity 1

  &_block
    position relative
    float left
    margin-left 10px
  
  &-text
    transition 50ms all ease-in
    cursor pointer
    color white
    font-family FuturaPTBook
    font-size 18px
    line-height 22px
    
 