input[type='checkbox'] 
  display none
  
  &+label
    transition 150ms all ease-in
    opacity 0.3
    position relative
    float left
    cursor pointer
    width 24px
    height 24px
    display block
    background url(../../images/sprites/checkbox.png) center no-repeat
    
    &:hover
      opacity 1
      background url(../../images/sprites/checkbox_hover.png) center no-repeat
      
  &:checked + label
    opacity 1
    background url(../../images/sprites/checkbox_ok.png) center no-repeat!important
    
  &.checkbox2
    &+label
      transition 150ms all ease-in
      opacity 0.3
      position relative
      float left
      margin-right 12px
      cursor pointer
      width 24px
      top -1px
      height 24px
      display block
      background url(../../images/sprites/checkbox-1.png) center no-repeat
      
      &:hover
        opacity 1
        background url(../../images/sprites/checkbox2_hover.png) center no-repeat
        
    &:checked + label
      opacity 1
      background url(../../images/sprites/checkbox2_ok.png) center no-repeat!important

input[type='radio'] 
