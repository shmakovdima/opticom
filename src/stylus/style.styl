@import 'variables.styl'
@import 'sprite.styl'
@import 'components/fonts.styl'
@import 'components/15colums.styl'
@import 'components/20colums.styl'
@import 'components/text-align-media.styl'


.slick
  &-slider
    width 100%
    overflow hidden

*
  margin 0
  padding 0
  
input
  outline none!important
  border none
  background transparent

body
  padding 0px
  margin 0px
  font-family FuturaPTBook
  min-height 100vh
  background #fafafa
  //background linear-gradient(0deg, #fafafa 0%, #ffffff 100%)

button
  border none
  outline none

a
  color black
  transition 150ms all ease-in
  
  &.green_underline:hover
  &.green_underline:active
    color color_green
  
a:hover
a:active
a:visited
a:focus
  text-decoration none
  color black
 
ul
  list-style none 
  margin-bottom 0px
  

input[type='checkbox'] 
  display none
  
  &+label
    transition 150ms all ease-in
    opacity 0.3
    position relative
    float left
    cursor pointer
    width 24px
    height 24px
    display block
    background url(../../images/sprites/checkbox.png) center no-repeat
    
    &:hover
      opacity 1
      background url(../../images/sprites/checkbox_hover.png) center no-repeat
      
  &:checked + label
    opacity 1
    background url(../../images/sprites/checkbox_ok.png) center no-repeat!important

.greenlighted_left  
.header_link_active
  z-index 1
  position relative
  display inline
  
  &:before
    opacity 1
    display block
    transition 200ms all ease-in
    z-index -1
    left -7px
    bottom 0px
    background color_green
    content ''
    position absolute
    width 100%
    height 50%
  



.greenborderbottom
  & span
    display inline-block
    position relative
    padding-bottom 4px
    
    &:after
      transition 150ms all ease-in
      content ""
      width 100%
      bottom 0px
      position absolute
      left 0px
      height 3px
      background color_green
     
  &:hover
  &:active
    span
      &:after
        height 5px
        background: -webkit-linear-gradient(180deg, #59a1ad 0%, #98c04d 100%)
        background: -moz-linear-gradient(180deg, #59a1ad 0%, #98c04d 100%)
        background: -o-linear-gradient(180deg, #59a1ad 0%, #98c04d 100%)
        background: -ms-linear-gradient(180deg, #59a1ad 0%, #98c04d 100%)
        background: linear-gradient(-90deg, #59a1ad 0%, #98c04d 100%)

.greenlighted_left  
  transition none
  &:before
    transition none
    opacity 0
    
  &:hover:before
  &:active:before
    opacity 1
    
.greenlighted_left.header_link_active
  &:before
    opacity 1
    
.greenlighted 

  &:hover:before
  &:active:before
    opacity 1
    
.greenlighted_left.header_link_active
  &:before
    opacity 1

.gradient_underlinehover
  position relative
  display inline-block
  z-index 1
  
  &:before
    opacity 0
    display block
    transition 200ms all ease-in
    z-index -1
    right -4px
    bottom 3px
    background: -webkit-linear-gradient(180deg, #4d9bc0 0%, #98c04d 100%)
    background: -moz-linear-gradient(180deg, #4d9bc0 0%, #98c04d 100%)
    background: -o-linear-gradient(180deg, #4d9bc0 0%, #98c04d 100%)
    background: -ms-linear-gradient(180deg, #4d9bc0 0%, #98c04d 100%)
    background: linear-gradient(-90deg, #4d9bc0 0%, #98c04d 100%)
    content ''
    position absolute
    width 100%
    height 50%

  &:hover:before
  &:active:before
    opacity 1

.green_underline
  border-bottom 1px solid color_green
  
  &.opacity
    border-bottom 1px solid color_green_opacity
    
    &:hover
    &:active
      border-bottom 1px solid color_green
      

.greenlighted 
  position relative
  display inline-block
  z-index 1
  
  &:before
    opacity 1
    display block
    transition 200ms all ease-in
    z-index -1
    left -15px
    bottom 3px
    background color_green
  
    content ''
    position absolute
    width 50%
    height 20%

  &:hover:before
  &:active:before
    opacity 1
    height 45%
 
section
  margin-top 100px

h1
h2
h3
h4
h5
h6
  margin 0px
  padding 0px
  
h1
  color white
  font-size 72px
  font-family FuturaPTHeavy
  line-height 64px

h2
  font-family FuturaPTHeavy
  color black
  padding-bottom 60px
  font-size 62px
  line-height 60px
  
h3
  font-family FuturaPTBold
  color black



.load
  &_more
    padding-bottom 40px
    padding-top 20px

    button
      margin-top 50px
      background transparent
      text-transform uppercase
      max-width 160px
      display inline-block
      text-align left
      color black
      font-size: 24px
      line-height 32px
      font-family FuturaPTBold


@media (min-width:  1300px)
  .container
    width 1280px

@media (max-width: 991px)

  h2
    font-size 72px
  h3
    font-size 48px

  .container
    padding-left 45px
    padding-right 45px

.ecocheckbox
  margin-top 30px
  min-width 240px
  
  &:hover
    .ecocheckbox-text
      color color_green  
      
    & label
      background url(../../images/sprites/checkbox_hover.png) center no-repeat
      opacity 1

  &_block
    position relative
    float left
    margin-left 10px
  
  &-text
    transition 50ms all ease-in
    cursor pointer
    color white
    font-family FuturaPTBook
    font-size 18px
    line-height 22px
    
@media (max-width: 768px)

  .load
    &_more
      button
        font-size 34px

  .green_underline
    border-bottom 2px solid color_green
    
    &.opacity
      border-bottom 2px solid color_green_opacity
      
      &:hover
      &:active
        border-bottom 2px solid color_green
 
