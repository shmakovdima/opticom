@import 'variables.styl'
@import 'sprite.styl'

import_tree('./components')

*
  margin 0
  padding 0
  
input
  outline none!important
  border none
  background transparent

body
  padding 0px
  margin 0px
  font-family FuturaPTBook
  min-height 100vh
  background linear-gradient(0deg, #f9f9f9 0%, #ffffff 100%)
  /*background url(../../images/sprites/sdf.png) no-repeat*/

button
  border none
  outline none

a
  color black
  transition 150ms all ease-in
  
  &.green_underline:hover
  &.green_underline:active
    color color_green
  
a:hover
a:active
  text-decoration none
  color black
 
ul
  list-style none 
  margin-bottom 0px
  


.greenlighted_left  
.header_link_active
  z-index 1
  position relative
  display inline
  
  &:before
    opacity 1
    display block
    transition 200ms all ease-in
    z-index -1
    left -7px
    bottom 0px
    background color_green
    content ''
    position absolute
    width 100%
    height 50%
  


.greenlighted_left  
  transition none
  &:before
    transition none
    opacity 0
    
  &:hover:before
  &:active:before
    opacity 1
    
.greenlighted_left.header_link_active
  &:before
    opacity 1
    

.gradient_underlinehover
  position relative
  display inline-block
  z-index 1
  
  &:before
    opacity 0
    display block
    transition 200ms all ease-in
    z-index -1
    right -4px
    bottom 3px
    background: -webkit-linear-gradient(180deg, #4d9bc0 0%, #98c04d 100%)
    background: -moz-linear-gradient(180deg, #4d9bc0 0%, #98c04d 100%)
    background: -o-linear-gradient(180deg, #4d9bc0 0%, #98c04d 100%)
    background: -ms-linear-gradient(180deg, #4d9bc0 0%, #98c04d 100%)
    background: linear-gradient(-90deg, #4d9bc0 0%, #98c04d 100%)
    content ''
    position absolute
    width 100%
    height 50%

  &:hover:before
  &:active:before
    opacity 1

.green_underline
  border-bottom 1px solid #c3e782

section
  margin-top 100px

h1
h2
h3
h4
h5
h6
  margin 0px
  padding 0px

h2
  font-family FuturaPTHeavy
  color black
  font-size 62px
  line-height 60px
  
h3
  font-family FuturaPTBold
  color black






@media (min-width:  1300px)
  .container
    width 1280px

@media (max-width: 991px)

  h2
    font-size 72px
  h3
    font-size 48px

  .container
    padding-left 45px
    padding-right 45px

.header
  position absolute
  width 100%
  top 0px
  font-size 13px
  color white
  transform scaleY(1.0038)
  padding-top 68px
  font-family FuturaPTBold
  text-transform uppercase
  

  & a
    color white
    font-size 14px
    font-family FuturaPTBold

  .container
    line-height 56px
    
  &_search
    margin-top 13px
    width 17%
    padding-left 30px
    margin-right 5.5%
    line-height 30px
    background url(../../images/sprites/header_dark_search.png) left center no-repeat 
    
    & input
      width 100%
      color white
      border-bottom 2px solid white
      
      &:-ms-input-placeholder
      &::-moz-placeholder
      &:-moz-placeholder
      &::-webkit-input-placeholder
        font-family FuturaPTBold
        font-size 13px
        color rgba(132, 148, 154, 0.5) 
  &_phone
    font-size 14px
    padding-left 28px
    margin-right 2.1%
    line-height 16px
    margin-top 20px
    background url(../../images/sprites/header_dark_phone.png) no-repeat

  &_basket
    margin-top 17px
    padding-left 30px
    font-family FuturaPTMedium
    position relative
    background url(../../images/sprites/header_dark_basket.png) no-repeat
    margin-right 1.8%
    width 60px
    height 24px
    font-size 14px
    line-height 20px

    & span
      position relative
      line-height 27px

  &_menu
    position relative
    float left
    background url(../../images/sprites/header_dark_menu.png) no-repeat
    display inline-block
    margin-left 8%
    margin-top 22px
    width 15px
    height 13px
    
  &_user
    width 14px
    height 15px
    margin-top 22px
    position relative
    background url(../../images/sprites/header_dark_user.png) no-repeat
    position relative

  &_links
    margin-left 3%
    position relative
    float left
    letter-spasing 1px

    & li
      float left
      display inline-block
      
      & + li
        margin-left 40px

  &_logo
    width 169px
    height 51px
    background url(../../images/sprites/header_dark_logo.png) no-repeat
    background-size contain
    background-position center
    

@media (max-width: 1200px)
  .header
    
    font-size 12px

    &_menu
      margin-left 4%

    &_links
      margin-left 3.5%


.catalog
  

  &_header
    height 704px
    width 100%
    background url(../../images/sprites/catalog_header.png) no-repeat
    background-position center
    background-size cover
    margin-top 0px
    

  &_preferences
    overflow hidden
    
    &_item
      padding-top 180px
      
      h3
        margin-right -30px
      

      div
        z-index -1
        position absolute
        top -30px
        left -100px
        right -100px
        height 200%
        
        
      &_1
        div
          background url(../../images/sprites/catalog_complex_assortiment.png) center -20px no-repeat
        
      &_2
        div
          background url(../../images/sprites/catalog_complex_education.png) center 20px no-repeat
        
      &_3
        div
          background url(../../images/sprites/catalog_complex_delivery.png) center 20px no-repeat
        
      &_4
        div
          background url(../../images/sprites/catalog_complex_servis.png) center -20px no-repeat

      & + &
        margin-left 6.66666666667%
      
      & p
        font-size 16px
        line-height 24px
        font-family LeksaPro
        margin-top 15px  

@media (max-width: 991px)
  .catalog
    &_preferences
      &_item
        padding-top 270px
        
        & p
          margin-top 30px
          font-size 32px
          line-height 40px

        & + &
          margin-left 0px

