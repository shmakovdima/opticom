@import '../variables.styl'

.ecology
  

  
  &_block
    position relative
    left 130px
    
    &_addon
      position absolute
      z-index -1
      left 420px
      width 130px
      height 100%
      background color_green
    
    & span
      margin-top 30px
      left 60px
      font-size 14px
      color: #626e73
      position relative
      clear left
      float left
      font-family FuturaPTMedium
      text-transform uppercase
      
    & a
      font-size: 32px
      line-height 36px
      margin-top 20px
      font-family FuturaPTHeavy
      float left
      clear left
      max-width 460px
      
      &:hover
      &:active
        color color_black
      
    & p
      left 60px
      font-size: 18px
      font-family LeksaPro
      float left
      max-width 800px
      clear left
      margin-top 50px

  &_item
    position relative
    float left
    min-height 400px
    margin-bottom 60px

    &_image
      left 0px
      top 0px
      z-index -1
      height 384px
      width 576px
      position absolute
      background-position center
      background-size cover
      
      & + .ecology_block
        left 400px
        
        & p
          max-width 500px
  & h1
    font-size: 72px
    color black
    
  &_tegs
    width 100%
    float left
    
    & h3
      color black
      font-size: 12px
      text-transform uppercase
      line-height 30px


    & a
      float left
      font-size: 16px
      position relative
      padding-top 3px
      font-family FuturaPTBook
      margin-right 15px
      line-height 20px
      margin-bottom 5px
      cursor pointer

  &_category
    position relative
    float left
    width 100%
    margin-bottom 80px
    margin-top 20px
    
    & a
    & span
      cursor pointer
      float left
      clear left
      font-size: 12px
      padding-top 12px
      color black
      font-family FuturaPTBold
      text-transform uppercase
      position relative
      
      &:before
        left 0px!important
        bottom 2px!important
        height 6px!important
    
  &_heading
    font-family LeksaPro
    font-size 18px
    padding-bottom 100px
    position relative
    float left
    margin-top 30px
    line-height 40px
    max-width 450px
    

  &_content
    & p
    & ul
      font-size: 18px
      font-family LeksaPro
      line-height 40px
      float left
      margin-bottom 40px
    

    & ul
      & li
        line-height 24px
        position relative
        margin-bottom 20px
        left 23px
        list-style none
        
        &:before
          left -23px
          font-size 30px
          position absolute
          content '\2022'
          color color_green
          position absolute
        
  &_header
    padding-top 230px
    width 100%
    height 672px
    max-height 100vh
    position relative
    margin-top 0px
    background-position center
    background-size cover
    
    & h1
      font-size: 52px
      line-height 60px
      
    & .breadcrumb
      color white
      font-size 16px
      vertical-align baseline
      
    & .breadcrumb-item a
      color white !important
      
    & .breadcrumb > li + li:before
      color white


@media(max-width: 1199px)
  .ecology
    &_category 
      margin-bottom 50px
      
      & a,& span
        clear none
        margin-right 30px

      
@media(max-width: 992px) 
  .ecology
    
    &_header
      padding-top 150px
      

    
    &_category 
      margin-bottom 50px
      a, span
        clear none
        margin-right 30px
        
    
    &_block 
      left 0px
      
      &_addon
        display none
        
      span
        left 0px

    &_item
      &_image
        & + .ecology_block
          left 0px

@media(max-width: 768px) 
 .ecology
  &_content
    & ul
      & li
        left 10px
        
  h1
     font-size 36px
     line-height 40px
  &_heading
    line-height 24px
    font-size 16px
    
  &_block 
    & p
      margin-top 25px
  
  &_header
    padding-top 100px 
    
    & h1
      font-size 36px
      line-height 42px
          
