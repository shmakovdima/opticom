@import '../variables.styl'

.ecology
  
  &_header
    width 100%
    height 672px
    background-position center
    background-size cover
  
  &_block
    position relative
    left 130px
    
    &_addon
      position absolute
      z-index -1
      left 420px
      width 130px
      height 100%
      background color_green
    
    & span
      margin-top 30px
      left 60px
      font-size 14px
      color: #626e73
      position relative
      clear left
      float left
      font-family FuturaPTMedium
      text-transform uppercase
      
    & a
      font-size: 32px
      line-height 36px
      margin-top 20px
      font-family FuturaPTHeavy
      float left
      clear left
      max-width 460px
      
      &:hover
      &:active
        color color_green
      
    & p
      left 60px
      font-size: 18px
      font-family LeksaPro
      float left
      max-width 500px
      clear left
      margin-top 50px

  &_item
    position relative
    float left
    min-height 400px
    margin-bottom 60px

    &_image
      left 0px
      top 0px
      z-index -1
      height 384px
      width 576px
      position absolute
      background-position center
      background-size cover
      
      & + .ecology_block
        left 400px
  & h1
    font-size: 72px
    color black
    
  &_tegs
    width 100%
    float left
    
    & h3
      color black
      font-size: 12px
      text-transform uppercase
      line-height 30px


    & a
      float left
      font-size: 16px
      position relative
      padding-top 3px
      font-family FuturaPTBook
      margin-right 15px
      line-height 20px
      margin-bottom 5px
      cursor pointer

  &_category
    position relative
    float left
    width 100%
    margin-bottom 80px
    margin-top 20px
    
    & a
    & span
      cursor pointer
      float left
      clear left
      font-size: 12px
      padding-top 12px
      color black
      font-family FuturaPTBold
      text-transform uppercase
      position relative
      
      &:before
        left 0px!important
        bottom 2px!important
        height 6px!important
    
  &_heading
    font-family LeksaPro
    font-size 18px
    padding-bottom 100px
    position relative
    float left
    margin-top 30px
    line-height 40px
    max-width 450px