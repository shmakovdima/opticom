@import '../sprite.styl'
@import '../variables.styl'

.login
  position fixed
  z-index 1500
  top 0px
  width 100%
  height 100vh
  
  .btn
    font-size 14px
    height 40px
    width 180px
  
  &_opacity
    position absolute
    width 100%
    height 100%
    left 0px
    top 0px
    z-index -1
    opacity 0.9
    background: -webkit-linear-gradient(144deg, #59a1ad 4%, #98c04d 96%)
    background: -moz-linear-gradient(144deg, #59a1ad 4%, #98c04d 96%)
    background: -o-linear-gradient(144deg, #59a1ad 4%, #98c04d 96%)
    background: -ms-linear-gradient(144deg, #59a1ad 4%, #98c04d 96%)
    background: linear-gradient(-54deg, #59a1ad 4%, #98c04d 96%)
    
  &_close
    right 50px
    top 50px
    position absolute
    z-index 12
    width 37px
    height 37px
    transition 150ms all ease-in
    background url(../../images/sprites/login_close.png) no-repeat
    background-size contain
    opacity 1

    &:hover
    &:active
      opacity 0.8
      
  &_block
    display inline-block
    width 220px
    height 100%
    
  &_button
    position absolute
    bottom 60px
    width 220px
    
  &_enter
    top 50%
    position relative
    margin-top -80px

    & input
      color black
      padding 4px 14px 
      font-size 18px
      font-family FuturaPTMedium
      width 100%
      border-bottom 2px solid black
      position relative

      & + input
        margin-top 15px
        
    
    
  &_forgot
    color:  #ffffff
    opacity 0.6
    text-transform uppercase
    font-size 14px
    line-height 40px
    transition 300ms all ease-in
    font-family FuturaPTBold
    
    &:hover
    &:active
      opacity 1
      
@media (max-width:768px)
  .login
    &_close
      width 20px
      height 20px
      right 25px
      top 25px
      