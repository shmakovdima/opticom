.sets
  &_header
    position relative
    
    &_picture
      position absolute
      top -50px
      right 0px
      width 512px
      height 336px
      background url(../../images/addset.png) no-repeat
    
    & h1
      font-size: 72px
      color black
      display block
      max-width 700px
      float left
      
    &_add
      h1
        margin-top 50px
      
    & .ecocheckbox
      max-width 220px
      & label
        opacity 1
      &-text
        color black

    &_description
      float left
      clear left
      color:  #0c0c0c
      font-size 21px
      line-height 32px
      max-width 490px
      position relative
      float left
      margin-top 20px
      display block
      font-family FuturaPTBook
        
      & .item_orderblock_status
        font-size 21px
        color:  #0c0c0c
        line-height 32px
      
  &_section
    overflow hidden