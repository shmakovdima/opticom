.home
  &_planet
    position absolute
    width 100%
    height 400px
    top 230px
    left 0px
    background-repeat no-repeat
    transform scale(1.2)
    background-image url(../../images/planet/planet-sprite.min.png)
    
@media (max-width: 1200px)
  .home
    &_planet
      transform scale(1.0)
     
    &_header  
      &_moon
      &_sun
        transform scale(0.5)
      
@media (max-width: 998px)
  .home
    &_planet
      transform scale(0.65)
      
    &_header  
      &_moon
      	display none
      
      &_sun
      	transform scale(0.25)