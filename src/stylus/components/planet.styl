.home
  &_planet
    position absolute
    width 100%
    height 400px
    top 230px
    left 0px
    background-repeat no-repeat
    transform scale(1.2)
    background-image url(../../images/planet/planet-sprite.min.png)
    
@media (max-width: 1200px)
  .home
    &_planet
      transform scale(1.0)
     
    &_header  
      &_moon
      &_sun
        transform scale(0.5)
      
@media (max-width: 998px)
  .home
    &_planet
      transform scale(0.65)
      
    &_header  
      &_moon
      	display none
      
      &_sun
      	transform scale(0.25)
       
@media (max-width: 768px)
  .home
    &_planet
      z-index 1
      top -7px
      width 150%
      left -27.5%
      transform scale(0.6)
    
    &_header  
      &_moon
      &_sun
        display block
        transform scale(0.5)

