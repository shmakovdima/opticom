@import '../sprite.styl'
@import '../variables.styl'


.ready
  margin-bottom 56px
  float left
  position relative
  
  &_main:nth-child(odd)
    .ready
      &_addons
        top 35px
  
  &_container
    margin-top 40px

  &_block
    position relative
    max-width 100%
    float left
    
    
  &_image
  &_hover
    opacity 1
    transition 300ms all ease-in
    position relative
    display block
    float left
    max-height 220px
    max-width 100%
    
  &_addons
    overflow visible
    width 300px
    position absolute
    top 0px
    z-index 15
    z-index 20
    padding-top 30px
    padding-left 60px
    padding-bottom 20px
    right -120px
    


  &_title
    max-width 260px
    color black
    font-size: 24px
    line-height 24px
    font-family FuturaPTHeavy
    display: block
    float: left
    
    &_adds
      transition 200ms all linear
      position absolute
      height 6px
      display none
      z-index -1
      bottom 0px
      right 10px
      background color_green
      width 100%

    & > span
      position relative
      margin-right 6px
      float left

      &:last-child
        clear left
        
        & > .ready_title_adds
          display block
  &_count
    float left
    clear left
    margin-top 10px
    color: #111111
    font-family FuturaPTMedium
    font-size 13px
    line-height 22px
    text-transform uppercase
    
    &_xs
      z-index 15
      bottom
      color #111111
      left 20%
      padding-left 60px
      text-align center
      font-size 26px
      bottom 33px
      text-transform uppercase
      font-family FuturaPTMedium
      position absolute

  &_hover
    opacity 0
    left 0px
    top 0px
    position absolute
    width 100%
    height 100%
    
  &:hover
    .ready
      &_image
        opacity 0
        
      &_hover
        opacity 1
      &_title
        &_adds
          height 250px
          bottom -50px
          margin-top 0px!important
          width 120%
          background: -webkit-linear-gradient(180deg, #59a1ad 0%, #98c04d 100%)
          background: -moz-linear-gradient(180deg, #59a1ad 0%, #98c04d 100%)
          background: -o-linear-gradient(180deg, #59a1ad 0%, #98c04d 100%)
          background: -ms-linear-gradient(180deg, #59a1ad 0%, #98c04d 100%)
          background: linear-gradient(-90deg, #59a1ad 0%, #98c04d 100%)    
          
@media (max-width: 1200px)
  .ready
    &_image
    &_hover
      max-height 205px
      
@media (max-width: 991px)
  .ready
    &_image
    &_hover
      max-height 200px
      
    &_addons
      left 20%!important
      
    &_block
      left 0px!important
      
@media (max-width: 768px)
  .ready
    margin-bottom 70px
    

    &_addons
      width auto
      top 35px

    &_title
      font-size 48px
      line-height 48px
    &_image
    &_hover
      min-height 450px
      max-height 450px
    
      
