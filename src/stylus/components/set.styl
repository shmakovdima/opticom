@import '../sprite.styl'
@import '../variables.styl'


.ready
  margin-bottom 56px
  float left
  position relative
  
  &_date
    color:  #111111
    font-size 13px
    font-family FuturaPTMedium
    top -10px
    position relative
  
  &_pressnews
    position absolute
    height inherit!important
    padding-bottom 30px!important
    bottom -30px
    padding-left 40px!important
    top inherit!important
    
    & .ready
      &_title
        font-size 18px
    
    &_item
      padding-bottom 56px
    
    &_bg
      position absolute
      top 0px
      left 0px
      height 100%
      width 75%
      z-index -1
      transition 150ms all ease-in
      background color_green
    
  &:hover
    height inherit!important
      
    .ready
      &_pressnews
        &_bg
          background color_green
          background color_gradient
  
  &_main:nth-child(odd)
    .ready
      &_addons
        top 35px
  
  &_container
    margin-top 40px

  &_block
    position relative
    max-width 100%
    float left
    
  &_cost
    position absolute
    left 0px
    display block
    padding-left: 60px
    white-space nowrap
    top 200px
    font-family FuturaPTHeavy
    font-size 24px
    
  &_description
    max-width 200px
    color color_black
    font-size 16px
    clear left
    line-height 20px
    font-family FuturaPTBook
    float left
    position relative
    margin-top 20px
    
    
  &_image
  &_hover
    opacity 1
    transition 300ms all ease-in
    position relative
    display block
    float left
    max-height 220px
    max-width 100%
    
  &_addons
    overflow visible
    width 300px
    position absolute
    top 0px
    z-index 1
    padding-top 30px
    padding-left 60px
    padding-bottom 20px
    right -120px
    transition 300ms all ease-in 
    
    & ul

      width 100%
      color color_black
      font-size: 14px
      min-width 300px
      margin-top 10px
      color black
      list-style-type none
      position relative
      float left
      display none
      column-count 2
      column-width 50%
      list-style-type: none;
      list-style-image: none;
      list-style-image: url('data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7')
      list-style-position: outside;
      
      & li

        list-style-type: none;
        list-style-image: none;
        list-style-image: url('data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7')
        margin-bottom 4px
        display inline-block
        position relative
        list-style-position: outside;
        overflow: hidden;
        font-size 16px
        
        & span
          &:before
            position absolute
            content 'Â·'
            left -15px
            font-size 34px
            top -12px
            display: block
      


        
    
    &_block
      position absolute
      left 20px
      top 10px
      width 105px
      height 215px
      background color_green_opacity2
    

  &_edit
    position absolute
    left 34px
    display block
    opacity 0
    background url(../../images/sprites/profile_refresh.png)  no-repeat
    top 34px
    width 14px
    height 14px
    transition 400ms all ease-in

  &_title
    max-width 260px
    color black
    font-size: 24px
    line-height 24px
    font-family FuturaPTHeavy
    display: block
    float: left
    
    &_adds
      transition 200ms all linear
      position absolute
      height 6px
      display none
      z-index -1
      bottom 0px
      right 10px
      background color_green
      width 100%

    & > span
      position relative
      margin-right 6px
      float left

      &:last-child
        clear left
        
        & > .ready_title_adds
          display block
  &_countpopular
  &_countselect
  &_count
    float left
    width 150px
    clear left
    margin-top 10px
    color: #111111
    font-family FuturaPTMedium
    font-size 13px
    line-height 22px
    text-transform uppercase
  
  &_countpopular
    top 220px
    white-space nowrap
    padding-left 60px
    position absolute
    color #626e73

  &_countselect
    position relative
    margin-top 35px


  &_count
    &_xs
      z-index 15
      bottom
      color: #111111
      left 20%
      padding-left 60px
      text-align center
      font-size 13px
      bottom 33px
      text-transform uppercase
      font-family FuturaPTMedium
      position absolute

  &_hover
    opacity 0
    left 0px
    top 0px
    position absolute
    width 100%
    height 100%
    
  &:hover
    .ready
      &_image
        opacity 0
        
      &_hover
        opacity 1
        
      &_cost
      &_countpopular
      &_countselect
        z-index 40
        
      &_addons
        height 300px
        
      &_title
        &_adds
          height 250px
          bottom -50px
          margin-top 0px!important
          width 120%
          background: -webkit-linear-gradient(180deg, #59a1ad 0%, #98c04d 100%)
          background: -moz-linear-gradient(180deg, #59a1ad 0%, #98c04d 100%)
          background: -o-linear-gradient(180deg, #59a1ad 0%, #98c04d 100%)
          background: -ms-linear-gradient(180deg, #59a1ad 0%, #98c04d 100%)
          background: linear-gradient(-90deg, #59a1ad 0%, #98c04d 100%)    

.ready.readypopular
  margin-bottom 100px
  .ready
    &_title
      &_adds
        & > span:last-child 
          & > .ready_title_adds
            display none

  &:hover 
    .ready
      
      &_edit
        opacity 1
        transition 100ms all ease-in
        
      &_title
        &_adds
          margin-top -10px!important
          bottom inherit
          height 260px 

.ready.readyselect
  margin-bottom 100px
  width 100%
  
  &:hover
    display block
    .ready
      &_title
        max-width 300px
        display block
        min-width 250px
        
        & > span:last-child
          clear none

      &_addons
        height 100%
        padding-left 50px
        top 0px
        width 100%
        left 0px!important
      
        
        & ul
          display block

        &_block
          height 100%
          width 100%
          top 0px
          left 0px
          
        & .ready_countselect
          margin-top 10px



          
@media (max-width: 1200px)
  .ready
    &_image
    &_hover
      max-height 205px
      
@media (max-width: 991px)
  .ready
    &_image
    &_hover
      max-height 200px
      

      
    &_block
      left 0px!important
      
@media (max-width: 768px)
  .ready
    margin-bottom 35px
    
    &_edit
      left 10px
      top 15px
    
    &.readypopular
      margin-bottom 40px
      
    &.readyselect
      margin-bottom 30px
      
    &_pressnews 
      padding-left: 20px !important;
      
      &_item
        overflow hidden
      
      .ready
        &_title
          float left
          clear left
    
  
    &_addons
      left 0px!important
      width auto
      padding-left 30px
      top 35px
      
      & ul
        column-count 1
        column-width 100%
        
        & li
          width 100%

    &_title
      font-size 24px
      line-height 24px
      left 0px!important
      
      &_adds
        height 6px

    &_image
    &_hover
      min-height 300px
      max-height 300px
    
    &_cost
      top 230px
      left 30px!important
      padding-left 0px
    
    &_countpopular
      top 250px
      left 30px!important
      padding-left 0px
      
    &_date
      float left
      clear right
      
