@import '../sprite.styl'
@import '../variables.styl'


.ready_main
  .ready
    &:nth-child(odd)
    .ready
      &_addons
        top -59px

.ready
  margin-bottom 56px
  float left
  position relative
  
  &_block
    position relative
    max-width 100%
    float left
    


  &_image
  &_hover
    position relative
    display block
    float left
    max-height 220px
    max-width 100%
    
  &_addons
    overflow visible
    width 300px
    position absolute
    top 0px
    z-index 20
    padding-top 30px
    padding-left 60px
    padding-bottom 20px
    
  &_title
    display block
    max-width 235px
    color black
    font-size: 24px
    line-height 24px
    font-family FuturaPTHeavy
  
  &_count
    margin-top 20px
    color: #111111
    font-family FuturaPTMedium
    font-size 13px
    line-height 22px
    
  &_hover
    display none
    position absolute
    width 100%
    height 100%