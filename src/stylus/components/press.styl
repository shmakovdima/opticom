@import '../variables.styl'

.press
  
  &_future
    
    padding-bottom 100px

    h1
      color #000
      font-size 72px

    .container
      position relative
      
    .today_ecology_image
      right -150px
      top -300px
      z-index -1
      
    .profile_sets_header
      padding-top 175px
      

  &_lightbox
    position fixed
    z-index 2000
    width 100%
    height 100vh
    left 0px
    top 0px
    
    &_close
      position absolute
      right 25px
      top 25px
      color white
      font-size 30px
      cursor pointer
      font-weight bold
      opacity 1
      transition 150ms all ease-in

      &:hover
      &:active
        opacity 0.7

    &_body
      vertical-align middle
      height 100%
      display: flex
      justify-content: center
      align-items: center

    &_slider
      margin-top 200px
      display block
      position relative
      width 100%
      margin 0 auto

      
      .slick 
        
        &-track
          display inline-flex
        
        &-next 
        &-prev
          margin-right 50px!important 
        &-next
          background url(../../../images/sprites/catalog_slider_right.png) center no-repeat!important
          
          &.slick-disabled
            background url(../../../images/sprites/catalog_slider_left_disable.png) center no-repeat!important
            
        &-prev
          background url(../../../images/sprites/catalog_slider_right.png) center no-repeat!important
          
          &.slick-disabled
            transform none!important
            background url(../../../images/sprites/catalog_slider_left_disable.png) center no-repeat!important
      
    &_item
      width 40vw
      display block
      display: inline-block
      white-space: nowrap
      margin-right 10vw

      & img
        height auto
        width 100%
        display block
        position relative

      & span
        position absolute
        bottom -30px
        display block
        position relative
        text-align left
        color white
        float left
        font-size 18px
        line-height 22px
        font-family FuturaPTHeavy
    
    &_opacity
      position absolute
      left 0px
      top 0px
      width 100%
      height 100%
      background rgba(0,0,0,0.9)
  
  &_photo
    margin-top -30px

    & img
      max-width 100%
    
    & + &
      margin-top 70px
      
    &_title
      font-size 16px
      font-family FuturaPTMedium
      line-height 23px
      color black
      padding-top 10px

    & h2
      font-size: 24px
      padding-bottom 20px
      font-family FuturaPTHeavy
      
    &_item
      margin-bottom 50px
  
  &_news
    &_image
      height 224px
      width 192px
      
    &_where
      position absolute
      bottom 0px
      right 0px
      width calc(100% - 220px)
      color: #000000
      font-family LeksaPro
      line-height 16px
      font-size 16px
      
    &_link
      font-family FuturaPTHeavy
      margin-top 20px
      font-size: 22px
      line-height 36px
      float left
      clear left 

      &:hover
      &:active
        color color_green

    &_date
      font-family FuturaPTMedium
      color #98a4a6
      line-height 22px
      text-transform uppercase

    &_block
      position relative
      float right
      height 100%
      overflow hidden
      width calc(100% - 220px)
      
    &_item
      float left
      margin-bottom 80px
      position relative
  

  &_projects
    
    &_white
      z-index -1
      background white
      left -20px
      top -10px
      bottom -10px
      width 300px
    
    &_overflow
      position relative
      float left

    &_item
      position relative
      float left
      min-height 350px
      margin-bottom 50px
      
      & a
        float left
        vertical-align middle
        display table
        position relative
        text-decoration underline
        font-size: 24px
        font-family FuturaPTBold
        
        & span
          padding-right 6px
        
        &:hover
        &:active
          color color_green

        & img
          margin-right 20px
          float left

        & span
          -webkit-text-decoration-color: color_green
          -moz-text-decoration-color: color_green
          -o-text-decoration-color: color_green
          text-decoration-color: color_green
          display table-cell
          display inline-block
          vertical-align middle
          text-decoration-color: color_green
          float left
          max-width 350px
          

    & p
      color: #000000
      font-family LeksaPro
      font-size 16px
      line-height 32px
      position relative
      float left
      margin-top 35px


  &_kit
    
    &_p
      margin-top 0px !important
      

    &_link
      background url(../../../images/sprites/press_pdf.png) left center  no-repeat
      padding-left 42px
      clear left
      float left
      position relative
      font-family FuturaPTMedium

      & + &
        margin-top 25px

      & span
        font-size 22px
        transition 150ms all ease-in
        line-height 32px
        border-bottom 2px solid color_green
        
      &:hover
      &:active
        
        & span
          color color_green
          border-bottom-color color_gradientleft 

  &_header
    position relative
    
  & .profile_sets_white
    width 70%
    
  &_links
    margin-top 40px
    
    & a
      display block
      float left
      position relative
      text-transform uppercase
      font-size 12px
      color black
      font-family FuturaPTMedium
      margin-right 40px
      
      &.active
      &:hover
      &:active
        &:before
          content ''
          height 7px
          position absolute
          z-index -1
          display block
          background color_gradientleft
          width 100%
          bottom 1px
          right -10px
  
