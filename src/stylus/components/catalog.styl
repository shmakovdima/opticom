@import '../sprite.styl'
@import '../variables.styl'


.catalog
  &_header
    color white
    height 704px
    width 100%
    background url(../../images/catalog_header.png) no-repeat
    background-position center
    background-size cover
    margin-top 0px
    padding-top 200px
    
    &_slider
      padding-top 95px
      padding-bottom 80px

      
      &_item
        padding-right 66px
        position relative
        
        &_image
          width 100%
          height 80px
          background-repeat no-repeat
          background-position top left
          
        a:hover
            
          & + a
            color color_green
        
        &_title
          max-width 160px
          color white
          font-family FuturaPTHeavy
          font-size 24px
          float left
          line-height 24px
          
          &:active
          &:hover
            color color_green
            
          &:visited
            color white
          
        &_count
          text-transform uppercase
          padding-top 7px
          font-family FuturaPTMedium
          font-size 12px
          float left
          color color_white_opacity
          clear left
      
      &_block
        overflow hidden
        width 100%
      
      
      &_loadmore
        margin-top 76px
        font-family FuturaPTHeavy
        font-size 24px
        line-height 28px
        max-width 230px
        background none
        

    
    &_consult
      font-family FuturaPTBold
      margin-top 30px
      min-width 230px
      text-transform uppercase
      font-size 16px
      color white
      line-height 24px


      &_link
        margin-top 20px
        max-width 250px
        display inline-block
        font-size: 18px
        color white
        font-family FuturaPTBook
        line-height 28px
        
        &:hover
        &:active
          span
            color color_green
        
        & span
          transition 150ms all ease-in
          color white
          font-family FuturaPTBook

        &:hover
        &:active
          color color_green

    &_leed
      display block
      font-family LeksaPro
      font-size 18px
      line-height 
      color white
      line-height 22px
      margin-top 32px
    

  &_preferences
    overflow hidden
    
    &_link
      position relative
      top -30px

      
      & span
      & a
        font-size 18px
        color #0c0c0c
        font-family LeksaPro
        line-height: 22px

      & a:hover
      & a:active
        color color_green

    &_item
      padding-top 180px
      
      h3
        margin-right -30px

      div
        z-index -1
        position absolute
        top -30px
        left -100px
        right -100px
        height 200%
        
        
      &_1
        div
          background url(../../images/preferences/catalog_complex_assortiment.png) center -20px no-repeat
        
      &_2
        div
          background url(../../images/preferences/catalog_complex_education.png) center 20px no-repeat
        
      &_3
        div
          background url(../../images/preferences/catalog_complex_delivery.png) center 20px no-repeat
        
      &_4
        div
          background url(../../images/preferences/catalog_complex_servis.png) center -20px no-repeat

      & + &
        margin-left 6.66666666667%
      
      & p
        font-size 16px
        line-height 24px
        font-family LeksaPro
        margin-top 15px  


    

@media (max-width: 1000px)
  .catalog
    &_preferences
      &_item
        min-height 400px
        & + &
          margin-left 0px


@media (max-width: 768px)

  .interesed
    overflow hidden!important

  .catalog
    &_preferences
      &_link
        top -20px
        
        & span
        & a
          line-height 42px
          font-size 36px
    
    &_header
      height 1000px
      padding-top 200px
      
      &_consult
        margin-top 100px
        font-size 34px
      
        &_link
          margin-top 26px
          max-width 100%
          font-size 30px

      h1 
        font-size 96px
        
      &_leed
        font-size 28px
        line-height 32px
        max-width 280px
      
      &_slider
        padding-top 70px
        
        &_loadmore
          max-width 1000px
          margin-top 20px
          padding-top 0px
          font-size 30px
          
          & span
            padding-bottom 8px
        
        &_item
          padding-right 60px
          
          &_title
            max-width 250px
            font-size 34px
            line-height 34px
            
          &_count
            padding-top 12px
            font-size 20px
            

    &_preferences
      margin-top 120px
      
      &_item
        padding-top 270px
        margin-top 80px
        
        & p
          margin-top 30px
          font-size 32px
          line-height 40px
          
        & div
          top -60px

        & + &
          margin-left 0px
          
        &_1
          div
            background url(../../images/preferences/mobile_catalog_complex_assortiment.png) center -90px no-repeat
          
        &_2
          div
            background url(../../images/preferences/mobile_catalog_complex_education.png) center 0px no-repeat
          
        &_3
          div
            background url(../../images/preferences/mobile_catalog_complex_delivery.png) center -80px no-repeat
          
        &_4
          div
            background url(../../images/preferences/mobile_catalog_complex_servis.png) center -70px no-repeat


