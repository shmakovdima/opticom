@import '../sprite.styl'
@import '../variables.styl'
.menu
  position fixed
  top 0px
  left 0px
  overflow-x hidden
  z-index 1000
  width 100%
  height 100vh
  background rgba(255, 255, 255, 0.95)
  
  &_ul
    padding-top 10px
    padding-bottom 30px
    position relative
    float left
    & li
      padding-bottom 10px
      & + &
        margin-top 15px

      display inline-block
      clear left
      float left
      & a
        font-family LeksaPro
        font-size 14px
        line-height 24px
        
  &_overflow
    overflow hidden
    float left
    position relative
    width 100%

  &_close
    transition 150ms all ease-in
    position absolute
    width 20px
    height 19px
    right 37px
    top 37px
    cursor pointer
    z-index 2
    background url(../../../images/sprites/menu_close.png) center no-repeat  
    
    &:hover
      opacity 0.5

  &_green
  &_white
    height 100%
    
  &_block
    padding-left 100px
    padding-top 70px
    padding-bottom 70px
    
    & h2
      h3
      padding-bottom 50px
    
  &_green
    position absolute
    right 0px
    padding-top 70px
    min-height 100%
    background color_green
    
    &>div
      padding-left 100px
      
  &_subcategory
    font-family FuturaPTMedium
    font-size: 20px
    line-height 48px
    color black
    
  &_mainlink
    line-height 30px
    background transparent
    color: #000000
    font-size: 20px
    position relative
    width 100%
    font-family FuturaPTMedium
    display block
    clear left
    
    & span
      z-index 1
      position relative
    
    &.active
      &
        div
          display block
      
    &
      div
        z-index 0
        display none
        height 100%
        width 100%
        left 25px
        top 0px
        position absolute
        background color_green
    
    & + &
      margin-top 20px

@media (max-width: 1200px)
  .menu
    


    &_green
    &_white
      padding-left 50px
      
    &_green
      & > div
        padding-left 0px 


@media (max-width: 991px)
  .menu

      
    h2
      color: #000000
      font-size: 48px

   
    &_block
    &_green
      padding-top 60px
      padding-left 50px
    
    
@media (max-width:768px)
  .menu
    background linear-gradient(0deg, #59a1ad 0%, #98c04d 100%)  
    
    h2
    h3
      padding-bottom 70px

    h3
      left -15px
      font-size: 48px
      padding-bottom 40px
      font-family FuturaPTHeavy
      
    &_ul 
      left -15px
      position relative
      padding-top 40px
      & li 
        padding-bottom 30px
        & a
          font-size: 30px
      
    &_subcategory
      font-size: 34px
      left -15px
      position relative

    &_mainlink.active 
      div
        display none
        
    &_mainlink
      font-size: 40px
      
      & + &
        margin-top 50px
        
    &_block
      &.notactive
        display none
        
    &_prev
      width 17px
      height 27px
      position absolute
      left -30px
      top 14px
      background url(../../../images/sprites/mobile_menu_left.png) center no-repeat  
      

    &_close
      top: 80px
      z-index 20
      right: 50px
      width 27px
      height 27px
      background url(../../../images/sprites/menu_close_mobile.png) center no-repeat  
      
    &_block
    &_green
      padding-left 80px

    &_green
      min-height 100vh
      
      & > div
        float left
        position relative

      &.active
        float left
        
        background linear-gradient(0deg, #59a1ad 0%, #98c04d 100%)  
        position relative
        z-index 4
        width 100%
        top 0px
        left 0px
        padding-top 60px
        right inherit