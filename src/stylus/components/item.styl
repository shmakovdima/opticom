      position absolute
      bottom 30px
      font-family FuturaPTMedium
      color #000000
      font-size: 14px

  &_fulldesc
  &_box
  &_car
    background url(../../../images/sprites/itempage_info.png) left center no-repeat
    font-family FuturaPTDemi
    font-size 22px
    padding-left 35px
    
  &_fulldesc
    bottom 50px
    right 200px
    z-index 24
    position absolute


  &_box
    float left
    margin-top 45px
    font-size 16px
    position relative
    background url(../../../images/sprites/itempage_box.png) left center no-repeat
    
  &_car
    left -45px
    padding-left 45px
    display block
    background url(../../../images/sprites/itempage_car.png) left center no-repeat
    font-family FuturaPTBook
    font-size 18px
    
    & a
      font-family FuturaPTMedium

  &_bottom.item_bottom
    position relative
    margin-top 40px
    float left
    clear left
    
    .item_discount
      position relative
      font-size 30px
      text-decoration none
      font-family FuturaPTMedium
      
      &:before
        border-bottom: 4px solid #ee2828
        position: absolute
        content: ""
        width: 100%
        height: calc(50% + 2px)



    .item_cost
      margin-top 20px
      font-size 40px
      color: #000000
      
  &_pad
    padding-top 80px
    //min-height 324px
      
  &_image
    min-height 324px
    width 100%
    margin-top 110px
    background-repeat no-repeat
    background-position center
    background-size origin

  &_love.item_love
    right 40px
    position absolute
    top 40px
    z-index 34
    
  &_eco.item_eco
    position: absolute
    left: -30px
    margin-top: 12px
    
  &_description
    clear left
    font-family: LeksaPro
    color:  #0c0c0c
    font-size: 18px
    clear left
    float left
    line-height: 32px
    text-align: left
    margin-top 34px
    max-width 400px

  &_vendorcode
    float left
    font-family: FuturaPTBook
    color: #000000
    margin-top 25px
    font-size: 24px
    line-height: 28px
    text-align: left



