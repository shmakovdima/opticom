@import '../sprite.styl'
@import '../variables.styl'

.interesed
  overflow visible
  h2
    max-width 500px
    padding-bottom 60px

.item
  margin-bottom 10px
  width 250px
  max-width 250px
  position relative
  float left
  width 100%
  margin-top 20px
  top 0px
  transition 150ms all ease-in
  cursor pointer
  min-height 450px
  
  //box-shadow: -1px 2px 13px 5px rgba(0, 0, 0, 0.15)

  
  &_hide
    &_gor
      display none

  &_under
    position relative
    padding 24px
    min-height 450px
    width 100%
    box-shadow 0px 10px 46px 0px rgba(0, 0, 0, 0.05)
    border 2px solid #fafafa
    background-color #ffffff

  &_slide
    float left
    margin-right 25px
    position relative
    min-height 500px
    
  
  &_vendorcode
    font-family FuturaPTBook
    color color_gray
    clear left
    font-size 14px
    float left
    line-height 24px 
    
  &_eco
    width 22px
    height 32px
    background url(../../../images/sprites/item_eco.png) no-repeat

  &_title 
    margin-top 10px
    line-height 22px
    color black
    font-family FuturaPTHeavy
    font-size 18px
    float left
    
    &:hover
    &:active
      color color_green

  &_bottom
    transition 150ms all ease-in 
    position absolute
    padding-top 60px
    bottom 25px
    
  &_discount
    float left 
    clear left
    font-family FuturaPTBold
    text-decoration line-through
    line-height 24px
    font-size 16px
    
  &_desription
    margin-top 5px
    line-height 20px
    font-size 16px
    margin-top 60px
    clear left
    height 0px
    overflow hidden

    &_value
      font-family FuturaPTBook      

    &_title
      font-family FuturaPTHeavy
      

  &_order
    width 100%
    height 0px
    overflow hidden
    margin-top 40px
    position relative
    background transition
    

    
    &_body
      width 100%
      float left
      background #f0f0f0
      
    & button
      background transparent
      float left
      padding-left 8px
      padding-right 8px
      
    &_button
      text-transform uppercase
      line-height 40px
      color white
      width calc(100% - 70px)
      float right!important
      padding-top 0px
      font-size 12px!important
      font-family FuturaPTBold
      background color_green!important
      transition 150ms all ease-in
      
      &:hover
        background #98c04d!important
        background: -webkit-linear-gradient(180deg, #59a1ad 0%, #98c04d 100%)!important
        background: -moz-linear-gradient(180deg, #59a1ad 0%, #98c04d 100%)!important
        background: -o-linear-gradient(180deg, #59a1ad 0%, #98c04d 100%)!important
        background: -ms-linear-gradient(180deg, #59a1ad 0%, #98c04d 100%)!important
        background-image: linear-gradient(-90deg, #59a1ad 0%, #98c04d 100%)!important
      
    & input
      float left
      width 20px
      text-align center
      line-height 40px
      font-family FuturaPTHeavy
      font-size 16px
      
    &_minus
    &_plus
      font-family FuturaPTHeavy
      font-size 20px
      line-height 40px
    
    &_buttons
      & button
        background transparent
        line-height 22px
        font-family FuturaPTBold
        font-size 10px
        padding 0px 9px 
        
        &.active
          background #f0f0f0

  &_cost
    top 436px
    font-family FuturaPTBold
    color black
    line-height 30px
    font-size 24px
    float left
    clear left
    
    &_description
      float left
      clear left
      color color_gray

  &_new
    position absolute
    bottom -10px
    left 0px  
    font-family FuturaPTHeavy
    font-size 10px
    line-height 22px
    text-transform uppercase  
    
    color transparent!important
    -webkit-background-clip text
    background-clip text
    background-image: -webkit-linear-gradient(180deg, #4d9bc0 0%, #98c04d 100%)
    background-image: -moz-linear-gradient(180deg, #4d9bc0 0%, #98c04d 100%)
    background-image: -o-linear-gradient(180deg, #4d9bc0 0%, #98c04d 100%)
    background-image: -ms-linear-gradient(180deg, #4d9bc0 0%, #98c04d 100%)
    background-image: linear-gradient(-90deg, #4d9bc0 0%, #98c04d 100%)

  &_image
    position relative
    margin-top 30px
    height 160px
    width 100%
    background-position center
    background-repeat no-repeat
    
    &_block
      position relative
  
  &_love
    transition 150ms all ease-in
    width 24px
    height 21px
    background url(../../../images/sprites/item_heart_empty.png) no-repeat
    
    &:hover
      opacity 0.5
      background url(../../../images/sprites/item_heart_true.png) no-repeat
      
    &.active
      background url(../../../images/sprites/item_heart_true.png) no-repeat!important
  
  &:hover
  &:active
    
    z-index 15
    
    left 0px
    width 100%
    
    
    
    .item
      overflow visible

      &_under
        position absolute
        top -15px
        right 0px
        width 100%
        box-shadow: 0px 10px 46px 0px rgba(0, 0, 0, 0.15)
        
      &_order
        height auto

      &_bottom
        bottom inherit
        position relative
        padding-top 60px
        clear left
        
      &_desription
        height auto
        opacity 1

      &_cost
        &_description
          display none

      &_love
        background url(../../../images/sprites/item_heart_empty_hover.png) no-repeat
        &:hover
          opacity 0.5
          background url(../../../images/sprites/item_heart_true.png) no-repeat
          

  &_gor
    .item
      margin-top 0px
      
      margin-bottom 0px
      width 100%
      max-width 10000px
      min-width 0px
      min-height 219px
      
      &_eco
        position absolute
        right 25px
      
      &_hide
        &_gor
          display block
      
      &_new
        display none


      &_body
        position relative
        float left


      &_bottom
        float right
        transition none
        padding-top 64px
        margin-right 70px

      &_cost
        &_description
          display none
      
      &_title
        margin-top 40px
        
      &_vendorcode
        margin-top 15px
      
      &_desription
        display none
        
      &_dropdown
        clear right
        margin-right 8%
        float left
        clear none
        margin-top 35px
        

      &_order
        display none
        

        &_button
          display none
          width 128px
          position absolute
          width: 130px
          right: -20px
          top: 101px

        &_body
          width 100px
          margin-top 33px
          margin-right 11%
          
        

          & input
          & button
            float left
            
          & button
            text-align center
            width 30px
            background none

          & input
            font-family FuturaPTHeavy
            line-height 40px
            text-align center
            width 40px
      
      &_title
        &_block
          float left
          max-width 30%
          
      &_bottom
        position relative
      
      &_image
        float left
        width 200px
        margin-top 0px
        background-position center center
        max-width 250px
        
        &_block
          float left
      
      &_under
        min-height 210px

      &:hover
      &:active
        .item
          &_bottom
            transition none!important
            clear none
            padding-top 40px
            
          &_order
            &_button
              display block

@media (max-width: 1300px)
  .item
    &_gor
      .item
        
        &_title
          &_block
            max-width 250px

        &_image
          width 150px


@media (max-width: 1300px)
  .item
    &_gor
      .item
        
        &_bottom
          margin-right 15px
        
        &_title
          &_block
            max-width 200px

        &_image
          width 150px
          
@media (max-width: 768px)

  .item
    transition none!important
    position relative
    float none
    max-width 1000px
    margin-bottom 20px
    margin-top 20px
    width calc(100vw - 75px)
    

    &_under
      min-height 470px
      padding 30px
      top 0px  
    
    &:hover
    &:active
      top 0px
      position relative
      width calc(100vw - 75px)
      
     .item 
        &_under
          top 0px!important
          
        &_bottom
          padding-top 10px!important


    &_love
      width 24px
      height 24px
      background-size contain!important

    &_slide
      min-height 1000px
    
    
    &_vendorcode
      margin-top 10px
      font-size: 14px

      
    &_eco
      width 18px
      height 31px
      background-size contain

    &_title 
      margin-top 20px
      line-height 18px
      color black
      font-size: 18px
      

    &_bottom
      position absolute
      padding-top 30px
      bottom 30px
      
    &_discount
      margin-bottom 10px
      font-size 18px
      
    &_desription
      margin-top 5px
      line-height 20px
      font-size 16px
      margin-top 60px
    

        

    &_order
      width 100%
      height 0px
      overflow hidden
      margin-top 25px
      position relative
      background transition
      
        
      & button
        background transparent
        float left
        padding-left 10px
        padding-right 10px
        
      &_button
        text-transform uppercase
        line-height 40px
        color white
        padding-right inherit!important
        padding-left inherit!important
        float right!important
        padding-top 0px
        font-size 12px!important
        font-family FuturaPTBold
        background color_green!important
        transition 150ms all ease-in
        width calc(100% - 80px)
        
      & input
        float left
        width 40px
        text-align center
        line-height 40px
        font-family FuturaPTHeavy
        font-size 16px
        
      &_minus
      &_plus
        font-family FuturaPTHeavy
        font-size 20px
        line-height 40px
      
      &_buttons
        & button
          background transparent
          line-height 22px
          font-family FuturaPTBold
          font-size 10px
          padding 5px 19px 
          
          &.active
            background #f0f0f0

    &_cost
      font-size 24px
      
      &_description
        font-size 12px
        margin-top 10px

    &_new
      bottom -20px
      font-size: 10px
      
    &_image
      background-size contain
      margin-top 60px
      height 150px
      width 100%
      
@media (max-width: 550px)
  .item

    &_order
      
    
      input
        float none
        margin 0 auto
        display inline
        
      &_body
        text-align center
        button
          padding-left 30px
          padding-right 30px
      

      &_plus
        float right!important
      &_button
        width 100%!important
        float left!important
        





.itempage
  
  .category_header
    .item_order
      height auto
      position relative
      width 228px
      clear left

  .category_header 
    margin-top -40px
    
    &_white
      min-height 760px
    
    h1
      color: #000000
      font-size 52px
      line-height 60px
      font-family FuturaPTHeavy
      
  &_adddesc
    margin-top 100px
    
    h3
      font-size: 32px
      
  &_addons
    margin-top 40px
    font-size: 20px
    
    a
      float left
      clear left
      padding-left 45px 
      display block

    a + a
      margin-top 10px
      
  &_add
    position relative
    width 100%
    margin-top 30px

  &_addings
    width 32.3%
    margin-right 0.8%
