@import '../sprite.styl'
@import '../variables.styl'


.profile
  
  h1
    margin-top -30px
    color black
    font-size: 72px
    
  &_orders
    margin-top 45px
    &_block
      float left
      width 100%
      
      & + &
        margin-top 80px
    

  &_items
    overflow: hidden
    padding-top 50px
    top -85px

    position relative
    padding-bottom: 150px
    margin-bottom: -170px
    
    & .nav-tabs > li
    & .nav-tabs > li.active
      margin-left 65px
      margin-right 0px
    
    &_buyed
      position relative
      float right
      top -32px
      
      .dropdown
        float right
        
        .btn.btn-default.dropdown-toggle
          font-size: 18px
          font-family FuturaPTHeavy
          
          & .caret
            margin-top 13px
      
    &_search
      padding-top 16px
      margin-left 35px
      width 220px

      float right
      
      & input 
        transition 200ms all ease-in
        padding-left 7px
        padding-right 7px
        clear right
        color black
        font-size 12px
        padding-bottom 4px
        border-bottom 1px solid  rgba(132, 148, 154, 0.3)
        width 100%
        
        &:focus
        &:active
        &:hover
          border-bottom 1px solid  black
      

    
    &_panel
      padding-top 20px
    
    &_tabs
      padding-top 90px

  &_addresses
    float left
    position relative
    width 100%
    padding-top 15px
    



  &_right
    width 100%
    position relative
    float left
    display block
    padding 30px
    padding-bottom 40px
    
    &_button
      margin-top 10px
      font-size 14px
      text-transform uppercase
      color #000000
      font-family FuturaPTBold
      padding 14px 20px
      
      &_left
        background #f0f0f0
        
        &:hover
          color color_green
        
      &_right
        background  color_green
        color white
        
        &:hover
          background color_gradientleft
    
    &_workers
      margin-top 55px
    
    &_title
    
      font-size: 16px
      font-family FuturaPTBold
      line-height 24px
      color: #000000      
    
    & + &
      padding-top 0px

    & h2
      padding-bottom 0px
      font-size 24px
      font-family FuturaPTHeavy
      
    &_name
    &_job
      color black
      font-size 16px
      font-family FuturaPTBook
      clear left
      float left
      line-height 24px

    &_job
      color color_gray_more
      float left
      clear left
      padding-bottom 10px
      padding-top 5px

    &:before
      content ''
      z-index -1
      left 0px
      top 0px
      position absolute
      width 88px
      height 100%
      display block
      background #f0f0f0
        
      
    &_company
      padding-top 70px
      float left
      width 100%
      

      &_block
        cursor pointer
        width 100%
        border 2px solid #fafafa
        background-color: #ffffff
        padding 20px
        overflow hidden
        float left
        
        &.active
          background white url(../../../images/sprites/mobile_menu_left.png) calc(100% - 20px) 27px no-repeat
          background-size 10px
        
        & h3
          font-size 24px
          padding-right 30px
          text-transform none
          
        & span
          position relative
          float left
          font-size 16px
          font-family FuturaPTBook
          line-height 20px
          margin-top 21px


      &_addblock
        background white
        padding 30px
        
        & .row
          margin-top 0px!important
          margin-bottom 20px
          

      & h2
        position relative
        color #000000
        font-size: 32px
        padding-bottom 20px
        font-family FuturaPTHeavy
        
      &_add
        float left
        background white
        border 2px solid #fafafa
        padding 15px
        width 100%
        padding-left 25px
        

        & button
          width 100%
          padding-left 25px
          background url(../../../images/sprites/profile_add.png) left center no-repeat 
          color #000000
          font-family FuturaPTMedium
          text-align left
          font-size: 18px

  &_block
    float left
    width 100%
    
    &+&
      margin-top 80px

    & h2
      font-size: 32px
      text-transform none
      padding-bottom 0px
     
    & .row
      line-height 24px 
      margin-top 30px

    & .inputlabel
      padding-top 8px
      color: #000000
      line-height 24px
      font-size: 16px
      font-family FuturaPTHeavy
      
    & input[type='text']
      padding-left 14px
      padding-right 14px
      color: #000000
      font-size: 18px
      background-position right center
      line-height 36px
      font-family FuturaPTBook
      width 100%
      transition 300ms all ease-in
      border-bottom 1px solid rgba(0, 0, 0, 0.1)
      
      & + span.error
        position absolute
        right 20px
        top 5px
        width 100%
        text-align right
        color #ee3330
        font-size: 14px
        font-family FuturaPTBook
        display none

      &:focus
        border-bottom 1px solid black
        
      &.error
        border-bottom 1px solid #ee2e2c
        
        & + span.error
          display block
        
      &.email.ok
        background url(../../../images/sprites/input_ok.png) right center no-repeat 
        
        

      
    input
      &:-ms-input-placeholder
      &::-moz-placeholder
      &:-moz-placeholder
      &::-webkit-input-placeholder
        font-size 18px
        color rgba(0, 0, 0, 0.1)
        font-family FuturaPTBook


  &_settings
    margin-top 60px

  &_sets

    h1
      margin-top 0px
    
    & .row
      position relative
      
    &_create
    &_create_description
      position absolute
      right 90px
      width 200px
      top 40px
      font-size: 24px
      line-height 24px
      color black
      font-family FuturaPTHeavy
      
    &_create
      
      & .greenlighted:before
        left -7px
        width 100%
        height 6px

      &_description
        top 110px
        font-family FuturaPTBook
        color #84949a
        font-size 16px
 
    &_section
      margin-top 40px
      
      & h2 
        color black
        margin-bottom -30px
        font-size 32px

    &_white
      position absolute
      background white
      height 390px
      width 88.6%
      top -50px
      z-index -1
      right 0px
      
      &2
        position relative
        width 60%
        height 208px
        background white

    &_header
      padding-top 140px
      position relative
    
    &_popular
      float left
      position relative
      margin-top 75px
      color black
      font-size: 32px
      font-family FuturaPTHeavy
      
      &_block
        padding-top 35px
        width 100%
        float left
        position relative